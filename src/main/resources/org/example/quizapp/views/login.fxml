<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.quizapp.controllers.LoginController">
    <children>
        <Label text="কুইজ গেমে স্বাগতম" style="-fx-text-fill: #2c3e50; -fx-font-size: 24;" />
        <TextField fx:id="nameField" promptText="আপনার নাম লিখুন" style="-fx-font-size: 14;">
            <VBox.margin>
                <Insets left="50.0" right="50.0" />
            </VBox.margin>
        </TextField>
        <TextField fx:id="emailField" promptText="ইমেইল ঠিকানা লিখুন" style="-fx-font-size: 14;">
            <VBox.margin>
                <Insets left="50.0" right="50.0" />
            </VBox.margin>
        </TextField>
        <Button fx:id="startButton" mnemonicParsing="false" onAction="#handleStartQuiz" text="কুইজ শুরু করুন" style="-fx-font-size: 14; -fx-background-color: #27ae60; -fx-text-fill: white;">
            <VBox.margin>
                <Insets left="50.0" right="50.0" />
            </VBox.margin>
        </Button>
        <Button fx:id="viewScoresButton" mnemonicParsing="false" onAction="#handleViewScores" text="স্কোর দেখুন" style="-fx-font-size: 14; -fx-background-color: #3498db; -fx-text-fill: white;">
            <VBox.margin>
                <Insets left="50.0" right="50.0" />
            </VBox.margin>
        </Button>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>