<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.quizapp.controllers.QuizController">
    <children>
        <Label fx:id="questionLabel" style="-fx-text-fill: #2c3e50; -fx-wrap-text: true; -fx-font-size: 16;" text="প্রশ্ন এখানে দেখানো হবে">
            <VBox.margin>
                <Insets left="20.0" right="20.0" />
            </VBox.margin>
        </Label>
        <VBox fx:id="optionsContainer" spacing="10.0">
            <VBox.margin>
                <Insets left="50.0" right="50.0" />
            </VBox.margin>
        </VBox>
        <Button fx:id="nextButton" mnemonicParsing="false" onAction="#handleNextQuestion" text="পরবর্তী প্রশ্ন" style="-fx-font-size: 14; -fx-background-color: #2980b9; -fx-text-fill: white;">
            <VBox.margin>
                <Insets left="50.0" right="50.0" />
            </VBox.margin>
        </Button>
        <Label fx:id="scoreLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 14;" text="স্কোর: 0" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>