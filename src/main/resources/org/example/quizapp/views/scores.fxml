<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.quizapp.controllers.ScoreController">
    <children>
        <Label text="সমস্ত স্কোর" style="-fx-text-fill: #2c3e50; -fx-font-size: 24;" />
        <ScrollPane fitToWidth="true" style="-fx-background: white;" prefHeight="300">
            <content>
                <VBox fx:id="scoresContainer" spacing="10.0" />
            </content>
            <VBox.margin>
                <Insets left="20.0" right="20.0" />
            </VBox.margin>
        </ScrollPane>
        <Button mnemonicParsing="false" onAction="#handleBackToLogin" text="ফিরে যান" style="-fx-font-size: 14; -fx-background-color: #7f8c8d; -fx-text-fill: white;">
            <VBox.margin>
                <Insets left="50.0" right="50.0" />
            </VBox.margin>
        </Button>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>